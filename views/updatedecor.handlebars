<div class="row d-flex justify-content-center">
    <div class="addhome-card" style="width: 30rem;">
        <h3 class="page-title">Add decor</h3>
        <p></p>
        <form class="form updatedecor-form">

            <div class="form-group">
                <label for="decor-name">Name of the item:</label>
                <textarea class="form-input" type="text" id="decor-name">{{decors.product_name}}</textarea>
            </div>

            <div class="form-group">
                <label for="decor-desc">Short description or comment:</label>
                <textarea class="form-input" type="text" id="decor-desc">{{decors.description}}</textarea>
            </div>

            <div class="form-group">
                <label for="decor-price">Cost of the item:</label>
                <input class="form-input" {{!-- needs error handingly to deal with decimals --}} type="number"
                    id="decor-price" />
            </div>

            <div class="form-group">
                <label for="decor-link">Link to the item:</label>
                <textarea class="form-input" type="text" id="decor-link">{{decors.link}}
            </textarea>
            </div>
            {{!-- these hidden fields grab the id data we need from the GET and pass it through the PUT/UPDATE function
            in decor-routes --}}
            <div class="form-group" hidden>
                <label for="decor-id">Home Id:</label>
                <input class="form-input" type="text" id="home-id" value="{{decors.home_id}}" />
            </div>

            <div class="form-group" hidden>
                <label for="decor-id">Decor Id:</label>
                <input class="form-input" type="text" id="decor-id" value="{{decors.id}}" />
            </div>

            <button class="btn btn-primary subscribe-btn mt-3" type="submit">Update Decor</button>
    </div>
    </form>


    <script src="/js/updateDecor.js"></script>