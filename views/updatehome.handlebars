<div class="row d-flex justify-content-center">
    <div class="addhome-card" style="width: 30rem;">
        <h3 class="page-title">Update Home</h3>
        <p></p>
        <form class="form updatehome-form">

            <div class="form-group">
                <label for="home-title">First, a short description of the home:</label>
                
                <textarea class="form-input" type="text" id="home-title">{{homes.title}}</textarea>
            </div>

            <div class="form-group">
                <label for="home-address">Address of the home:</label>
                 <textarea class="form-input" type="text" id="home-address">{{homes.address}}</textarea>
            </div>

            <div class="form-group">
                <label for="home-price">Cost of the home:</label>
                <input class="form-input" {{!-- needs error handingly to deal with decimals --}} type="number" id="home-price" placeholder="{{homes.price}}" />
            </div>

            <div class="form-group">
                <label for="home-bedrooms">Number of bedrooms:</label>
                <input class="form-input" type="number" id="home-bedrooms" placeholder="{{homes.bedrooms}}"  />
            </div>

            <div class="form-group">
                <label for="home-bathrooms">Number of bathrooms:</label>
                <input class="form-input" type="number" id="home-bathrooms" placeholder="{{homes.bathrooms}}"  />
            </div>

            <div class="form-group">
                <label for="home-size">Square Feet:</label>
                <input class="form-input" {{!-- needs error handingly to deal with decimals --}} type="number"
                    id="home-size" placeholder="{{homes.square_feet}}" />
            </div>

            <div class="form-group">
                <label for="home-link">Link to home:</label>
                 <textarea class="form-input" type="text" id="home-link">{{homes.link}}</textarea>
            </div>
            {{!-- make sure to tag the user id to this via the post route --}}
            <button class="btn btn-primary update-btn mt-3" type="submit">Update Home</button>
    </div>
    </form>


    <script src="/js/updateHome.js"></script>