<div class="create-routes mb-5">
  <a href="/dashboard/addhome"><button id="addhome-link" class="btn card-link">Add a Home</button></a>
</div>
<ul class="nav nav-tabs d-flex justify-content-start" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="homes-tab" data-toggle="tab" href="#homes" role="tab" aria-controls="homes"
      aria-selected="true">Homes</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="decor-tab" data-toggle="tab" href="#decor" role="tab" aria-controls="decor"
      aria-selected="false">Decor</a>
  </li>
</ul>
<div class="tab-content d-flex flex-wrap" id="myTabContent">
  <div class="tab-pane fade show active justify-content-left" id="homes" role="tabpanel" aria-labelledby="home-tab">

    {{#each homes as |home|}}
    <br />
    <div class="home-card" style="width: 50rem;">
      <div class="card-body p-3">
        <a href="/dashboard/{{home.id}}">
          <h5 class="card-title">{{home.address}}</h5>
        </a>
        <h6 class="card-subtitle mb-2 text-dark">Added on
          {{home.date_saved}}</h6>
        <p class="card-text">{{home.title}} -- {{home.user.username}}</p>
        <div class="">
          <a href="{{home.link}}"><button id="gotohome-link" class="btn card-link">Visit the Link</button></a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="tab-pane fade " id="decor" role="tabpanel" aria-labelledby="decor-tab">

    {{#each decors as |decor|}}
    <br />
    <div class="decor-card" style="width: 50rem;">
      <div class="card-body p-3">
        <h5 class="card-title">{{decor.product_name}}</h5>
        <h6 class="card-subtitle mb-2 text-dark">Added on
          {{decor.date_saved}} || <strong>${{decor.price}}</strong> </h6>
        <p class="card-text">{{decor.description}} -- {{decor.user.username}}</p>
        <div class="">
          <a href="{{decor.link}}"><button id="gotohome-link" class="btn card-link">Visit the Link</button></a>
        </div>
      </div>
    </div>

    {{/each}}

  </div>
</div>