<div class="card-body p-3 targetHome">
    <h5 class="card-title">{{homes.address}}</h5>
    <h6 class="card-subtitle mb-2 text-dark">Added on {{homes.date_saved}}</h6>
    <p class="card-text">{{homes.title}} -- {{homes.user.username}}</p>
    <p>bedrooms:{{homes.bedrooms}}</p>
    <p>bathrooms:{{homes.bathrooms}}</p>
    <p>squarefeet:{{homes.square_feet}}</p>
    <a href="{{homes.link}}"><button id="gotohome-link" class="btn card-link">Visit the Link</button></a>
</div>
<br>
<div class="create-routes mb-5">

    <a href="/dashboard/moredecor/{{homes.id}}"><button id="update-link" class="btn card-link">Add Decor</button></a>

    <a href="/dashboard/updatehome/{{homes.id}}"><button id="update-link" class="btn card-link">Update this home</button></a>

      <a href="/dashboard/deletehome"><button id="update-link" class="btn card-link">Delete this home</button></a>

</div>
<br>
<h2>Decor for this home:</h2>
<br>
{{#each homes.decors as |decor|}}
<div class="decor-card">
    <div class="card-body p-3">
        <h5 class="card-title">{{decor.product_name}}</h5>
        <h6 class="card-subtitle mb-2 text-dark">Added on
            {{decor.date_saved}} || <strong>${{decor.price}}</strong> </h6>
        <a href="{{decor.link}}"><button id="gotohome-link" class="btn card-link">Visit the
                Link</button></a>
    </div>
    {{/each}}